# ===========================================
# TENANT CONFIGURATION
# These values will be replaced during generation
# ===========================================

# Tenant Identifier
NEXT_PUBLIC_TENANT_ID={{TENANT_ID}}
NEXT_PUBLIC_TENANT_SCHEMA={{TENANT_SCHEMA}}

# API Configuration
NEXT_PUBLIC_API_URL={{API_URL}}
# Example: https://amanati.api.echodesk.ge

# Store Information
NEXT_PUBLIC_STORE_NAME={{STORE_NAME}}
NEXT_PUBLIC_STORE_DESCRIPTION={{STORE_DESCRIPTION}}
NEXT_PUBLIC_STORE_LOGO={{STORE_LOGO_URL}}

# Theme Colors (HSL format for Tailwind)
NEXT_PUBLIC_PRIMARY_COLOR={{PRIMARY_COLOR}}
# Example: 221 83% 53% (blue-600)

NEXT_PUBLIC_SECONDARY_COLOR={{SECONDARY_COLOR}}
# Example: 215 16% 47% (slate-500)

NEXT_PUBLIC_ACCENT_COLOR={{ACCENT_COLOR}}
# Example: 221 83% 53%

# Currency and Locale
NEXT_PUBLIC_CURRENCY={{CURRENCY}}
# Example: GEL, USD, EUR

NEXT_PUBLIC_LOCALE={{LOCALE}}
# Example: ka, en, ru

# Features (true/false)
NEXT_PUBLIC_ENABLE_WISHLIST={{ENABLE_WISHLIST}}
NEXT_PUBLIC_ENABLE_REVIEWS={{ENABLE_REVIEWS}}
NEXT_PUBLIC_ENABLE_COMPARE={{ENABLE_COMPARE}}

# Social Links (optional)
NEXT_PUBLIC_FACEBOOK_URL={{FACEBOOK_URL}}
NEXT_PUBLIC_INSTAGRAM_URL={{INSTAGRAM_URL}}
NEXT_PUBLIC_TWITTER_URL={{TWITTER_URL}}

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL={{CONTACT_EMAIL}}
NEXT_PUBLIC_CONTACT_PHONE={{CONTACT_PHONE}}
NEXT_PUBLIC_CONTACT_ADDRESS={{CONTACT_ADDRESS}}

# Analytics (optional)
NEXT_PUBLIC_GA_ID={{GA_ID}}
NEXT_PUBLIC_GTM_ID={{GTM_ID}}

# Image Configuration
NEXT_PUBLIC_IMAGE_HOSTNAMES={{IMAGE_HOSTNAMES}}
# Example: echodesk-spaces.fra1.digitaloceanspaces.com,cdn.example.com
# Comma-separated list of allowed image hostnames for Next.js Image component

# ===========================================
# NEXTAUTH.JS CONFIGURATION (REQUIRED)
# ===========================================
# Generated automatically per tenant during deployment
NEXTAUTH_SECRET={{NEXTAUTH_SECRET}}
# Cryptographically secure random string (auto-generated)

NEXTAUTH_URL={{NEXTAUTH_URL}}
# Production frontend URL (e.g., https://store-tenant.vercel.app)
